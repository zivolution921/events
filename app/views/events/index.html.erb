<h1><%= pluralize(@events.size, 'Event')%></h1>
<p>
  Check out the following <%= @events.size %> events:
</p>

<!-- passing data from action to view template by setting instance variable and referencing  -->
<!-- iterating through events and generating event name subtituted  -->
  <% @events.each do |event| %>
  <!-- subtitute event name -->
    <article>
      <header>
     <!--  passing event_path -->
        <h2><strong><%= link_to(event.name,event) %></strong></h2>
      </header>
      <p>
        <%= truncate(event.description, length: 35, separator: '') %>
      </p>
      <table>
        <tr>
          <th>When:</th>
          <!--  built in date formats with default key to override the original value -->
          <td><%= event.starts_at %></td>
        </tr>
        <tr>
          <th>Where:</th>
          <td><%= event.location %></td>
        </tr>
        <tr>
          <th>Price:</th>
          <!-- method to convert any number to currency -->
          <td><%= format_price(event) %></td>
        </tr>
      </table>
    </article> 
  <% end %>
